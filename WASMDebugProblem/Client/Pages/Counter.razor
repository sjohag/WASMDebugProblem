@page "/counter"
@attribute [WASMDebugProblem.Shared.MyAttribute(WASMDebugProblem.Shared.MyEnum.One)]

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Attribute: @myAttribute</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private string myAttribute;

    private void IncrementCount()
    {
        currentCount++;
        myAttribute = ((WASMDebugProblem.Shared.MyAttribute)this.GetType().GetCustomAttributes(typeof(WASMDebugProblem.Shared.MyAttribute), false).FirstOrDefault())?.PositionalString;
    }
}
